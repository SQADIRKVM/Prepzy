{
  "expo": {
    "name": "Prepzy",
    "slug": "prepzy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.syronyx.examcountdown",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E6E6FA"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.syronyx.examcountdown",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_SETTINGS",
        "android.permission.ACCESS_NOTIFICATION_POLICY"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Prepzy",
      "shortName": "Prepzy",
      "lang": "en",
      "scope": "/",
      "themeColor": "#E6E6FA",
      "backgroundColor": "#000000",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/",
      "description": "Your Exam Countdown Companion - Track exams, manage study resources, and stay focused",
      "dir": "ltr",
      "categories": [
        "education",
        "productivity"
      ],
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to scan timetables"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos to import timetables"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "13c927da-dbf0-4191-ae92-57b30f83ec2f"
      }
    },
    "owner": "sqadirkvm"
  }
}
